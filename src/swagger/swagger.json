{
  "openapi": "3.0.0",
  "info": {
    "title": "API List",
    "version": "1.0.0",
    "description": "API documentation."
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/admin/login": {
      "post": {
        "summary": "Admin Login",
        "tags": ["Admin Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "admin@gmail.com" },
                  "password": { "type": "string", "example": "admin" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },

    "/api/admin/refresh-token": {
      "post": {
        "summary": "Admin Refresh Token",
        "tags": ["Admin Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "New tokens generated" }
        }
      }
    },

    "/api/admin/users": {
      "get": {
        "summary": "List Users (Admin)",
        "tags": ["Admin"],
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": { "type": "integer", "minimum": 1, "default": 1 }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            }
          },
          {
            "in": "query",
            "name": "name",
            "schema": { "type": "string" },
            "description": "Partial match, case-insensitive"
          },
          {
            "in": "query",
            "name": "email",
            "schema": { "type": "string", "format": "email" }
          },
          {
            "in": "query",
            "name": "minAge",
            "schema": { "type": "integer", "minimum": 0 }
          },
          {
            "in": "query",
            "name": "maxAge",
            "schema": { "type": "integer", "minimum": 0 }
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string",
              "enum": ["createdAt", "name", "age", "email"],
              "default": "createdAt"
            }
          },
          {
            "in": "query",
            "name": "order",
            "schema": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "List of users"
          }
        }
      }
    },

    "/api/user/register": {
      "post": {
        "summary": "User Registration",
        "tags": ["User Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "ak" },
                  "email": { "type": "string", "example": "ak@gmail.com" },
                  "age": { "type": "integer", "example": 24 },
                  "password": { "type": "string", "example": "123" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" }
        }
      }
    },

    "/api/user/login": {
      "post": {
        "summary": "User Login",
        "tags": ["User Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "example": "ak@gmail.com" },
                  "password": { "type": "string", "example": "123" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },

    "/api/user/refresh-token": {
      "post": {
        "summary": "User Refresh Token",
        "tags": ["User Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "New token created" }
        }
      }
    },

    "/status": {
      "get": {
        "summary": "Server & DB Health Check",
        "tags": ["System"],
        "responses": {
          "200": { "description": "Status information" }
        }
      }
    },

    "/api/user/item": {
      "post": {
        "summary": "Item Creation",
        "tags": ["Item"],
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "ak" },
                  "description": { "type": "string", "example": "abcd" },
                  "price": { "type": "integer", "example": 24 }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "item created successfully" }
        }
      }
    }
  }
}
